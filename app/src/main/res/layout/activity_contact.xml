<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/barbacoa_background"
    tools:context=".contact">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/viewcontact"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/top_background_shield"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/support_agent"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="CONTACTANOS"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewcontact"
        tools:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/viewcontact" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/phone_icon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/phoneicon"
                app:tint="@color/dark_orange" />


            <TextView
                android:id="@+id/call_us_legend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textColor="@color/flexible_text_color"
                android:text="Llamanos" />

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textColor="@color/flexible_text_color"
                android:textIsSelectable="true"
                android:textStyle="bold"
                android:clickable="true"
                android:onClick="call"
                android:text="+52 (000) 000 - 0000" />


            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/emailicon"
                app:tint="@color/dark_orange" />


            <TextView
                android:id="@+id/email_legend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/flexible_text_color"
                android:textSize="16dp"
                android:text="Escribenos" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/flexible_text_color"
                android:textSize="16dp"
                android:textIsSelectable="true"
                android:clickable="true"
                android:text="support@example.com" />

            <TextView
                android:id="@+id/social_media_legend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textColor="@color/flexible_text_color"
                android:layout_marginTop="40dp"
                android:text="Redes sociales" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/social1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/emailicon"
                    android:layout_weight="1"
                    app:tint="@color/pink" />
                <ImageView
                    android:id="@+id/social2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/emailicon"
                    android:layout_weight="1"
                    app:tint="@color/pink" />
                <ImageView
                    android:id="@+id/social3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/emailicon"
                    android:layout_weight="1"
                    app:tint="@color/pink" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>