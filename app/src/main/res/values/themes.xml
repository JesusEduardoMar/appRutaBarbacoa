<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Winestastic" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">

        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="colorPrimaryDark">#F21E0080</item>
        <item name="colorPrimary">#4CAF50</item>
        <item name="hintTextColor">#000000</item>
    </style>
    <style name="Theme.Orange"  parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimaryDark">@color/naranja4</item>
        <item name="colorPrimary">@color/naranja4</item>
    </style>
    <style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">#00FF7700</item>
        <item name="colorPrimary">#FF7700</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="colorControlNormal">#FFFFFF</item>

        <item name="cornerSizeBottomRight">30dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >

        <item name="cornerSizeBottomRight">30dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >

        <item name="cornerSizeBottomRight">30dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
    </style>

    <style name="DialogBasicCustomStyle" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:windowBackground">@drawable/background_map</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:windowMinWidthMajor">200dp</item>
        <item name="android:windowMinWidthMinor">150dp</item>




    </style>

</resources>